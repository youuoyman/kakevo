<div class="body">

<div class="title">
 <div class="main-title"><%= link_to "kakevo", root_path %></div>
</div>
 <div class="fixed-values-n">固定費科目 データ修正 </div>
      <%= form_for @fixed_value do |form| %>
        <table>
            <tr>
              <th>登録日</th>
              <th>名称</th>
              <th>値</th>
              <th>備考</th>
            </th>
          <tr>
            <td><%= form.date_select  :year_month,
                 start_year: 2010, end_year: Time.current.year,
                 use_month_numbers: true, discard_day: true %></td>
            <th><%= @fixed.name %></th>
            <td><%= form.text_field :value %></td>
            <td><%= form.text_field :description %></td>
          </tr>
        </table>
        <div class="register"><%= form.submit "修正" %></div>
      <% end %>
</div>
