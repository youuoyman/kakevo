<% "変動費科目一覧" %>

<%= link_to "変動費科目の新規登録", :new_change %>
<%= link_to "トップページへ戻る" root_path %>
 
<% if @changes.present? %>
<table>
	<thead>
		<tr>
			<th>科目名</th>
			<th>備考</th>
      <th>操作</th>
		</tr>
	</thead>
	<tbody>
		<% @changes.each do |change| %>
			<tr>
				<td><%= change.name %></td>
				<td><%= change.description %></td>
        <td>
				<%= link_to "編集", [:edit, change] %>
        <%= link_to "削除", change, method: :delete %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<% else %>
	<p>登録されている収入科目がありません。</p>
<% end %>