<div class="body">

  <div class="title">
   <div class="main-title"><%= link_to "kakevo", root_path %></div>
	</div>


  <div class="income-index"><%= "収入科目一覧" %>
	</div>
  <div class="income-new"><%= link_to "収入科目の新規登録", new_income_path %>
	</div>
 
   <% if @incomes.present? %>
    <table>
	    <thead>
		    <tr>
			   <th>科目名</th>
			   <th>備考</th>
         <th>操作</th>
		    </tr>
	    </thead>
	    <tbody>
		    <% @incomes.each do |income| %>
			    <tr>
				   <td><%= income.name %></td>
				   <td><%= income.description %></td>
           <td>
				   <%= link_to "編集", edit_income_path(income.id) %>
           <%= link_to "削除", income_path(income.id), method: :delete %>
				   </td>
			    </tr>
		    <% end %>
	    </tbody>
    </table>
    <% else %>
	   <p>登録されている収入科目がありません。</p>
    <% end %>
	
</div>