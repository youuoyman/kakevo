<% "固定費科目一覧" %>

<%= link_to "固定費科目の新規登録", :new_fixed %>
 
<% if @fixeds.present? %>
<table>
	<thead>
		<tr>
			<th>科目名</th>
			<th>備考</th>
      <th>操作</th>
		</tr>
	</thead>
	<tbody>
		<% @fixeds.each do |fixed| %>
			<tr>
				<td><%= fixed.name %></td>
				<td><%= fixed.description %></td>
        <td>
				<%= link_to "編集", [:edit, fixed] %>
        <%= link_to "削除", fixed, method: :delete %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<% else %>
	<p>登録されている収入科目がありません。</p>
<% end %>